<div class="card">
    <div class="card-header">
        <h2>Cadastro de Clientes</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
            </div>
            <div class="col-4">
                <form action="/Client/Register" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nome</label>
                        <input type="email" class="form-control" id="name" name="name" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Telefone</label>
                        <input type="email" class="form-control" id="phone" name="phone" aria-describedby="emailHelp">
                    </div>

                    <button type="submit" class="btn btn-success">Salvar Client</button>
                </form>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</div>
